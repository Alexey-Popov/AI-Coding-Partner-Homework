# JWT Configuration
# IMPORTANT: Generate a secure secret with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Must be at least 32 characters long
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_OF_AT_LEAST_32_CHARS
JWT_ALG=HS256
JWT_TTL=900

# H2 Database Configuration
H2_JAR_PATH=./h2.jar
DB_URL=jdbc:h2:file:./bank.db;AUTO_SERVER=TRUE;MODE=PostgreSQL
DB_USER=sa
DB_PASSWORD=
DB_DRIVER=org.h2.Driver

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=INFO
